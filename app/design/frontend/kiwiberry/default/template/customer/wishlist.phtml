    <table class="data-table">
        <col />
        <col width="60" />
        <col width="60" />
        <col width="60" />
        <thead>
            <tr>
                <th><?= $this->__('Product') ?></th>
                <th><?= $this->__('Status') ?></th>
                <th><?= $this->__('To Cart') ?></th>
                <th><?= $this->__('Remove') ?></th>
            </tr>
        </thead>
        <tbody>
        <?php foreach($wishlist as $item): ?>
            <tr>
                <td>
                    <input type="hidden" value="1" name="wishlist[<?= $item->getItemId() ?>]" />
