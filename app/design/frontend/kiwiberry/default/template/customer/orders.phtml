<div class="page-title">
    <h1><?= $this->__('My Orders') ?></h1>
</div>
<?php if($orders->getSize()): ?>
<table class="data-table" id="my-orders-table" >
    <thead>
        <tr>
            <th><?= $this->__('Order #') ?></th>
            <th><?= $this->__('Date') ?></th>
            <!--<th class="a-center">Shipped To</th>-->
            <th><?= $this->__('Total') ?></th>
            <th><?= $this->__('Status') ?></th>
            <th><?= $this->__('Details') ?></th>
        </tr>
    </thead>
    <tbody>
    <?php foreach ($orders as $order): ?>
        <tr>
            <td><?= $order->getRealOrderId() ?>&nbsp;</td>
            <td><?= date("D, j M, Y", strtotime($order->getCreatedAt())) ?>&nbsp;</td>
            <!--<td class="a-center">{$page.orders[io].customer}</td>-->
            <td><?= $order->getGrandTotal() ?>&nbsp;</td>
            <td><?= $order->getStatus() ?>&nbsp;</td>
            <td><a href="<?= $this->getUrl('customer/order/view', array('order'=>$order->getOrderId())) ?>"><?= $this->__('View Order') ?></a>&nbsp;</td>
        </tr>
    <?php endforeach ?>
    </tbody>
</table>
<script type="text/javascript">decorateTable('my-orders-table')</script>
<?php else: ?>
    <p><?= $this->__('You have placed no orders yet.') ?></p>
<?php endif ?>
<div class="buttons-set">
    <p class="back-link"><a href="<?= $this->getUrl('customer/account') ?>"><small>&laquo; </small><?= $this->__('Back') ?></a></p>
</div>
