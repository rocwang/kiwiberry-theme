  <?php
  foreach ($this->getSteps() as $_stepId => $_stepInfo):
    if (!$this->getChild($_stepId) || !$this->getChild($_stepId)->isShow()): continue; endif;
    ?>

    <li id="opc-<?php echo $_stepId ?>"
        class="section<?php
        echo !empty($_stepInfo['allow']) ? ' allow' : '';
        echo !empty($_stepInfo['complete']) ? ' saved' : '' ?>">

      <h2 class="step-title">
        <?php echo $_stepInfo['label'] ?>
        <small><a href="#"><?php echo $this->__('Edit') ?></a></small>
      </h2>


      <div id="checkout-step-<?php echo $_stepId ?>" class="step a-item" style="display:none;">
        <?php echo $this->getChildHtml($_stepId) ?>
      </div>

    </li>

  <?php endforeach ?>
