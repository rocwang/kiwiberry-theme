  <h1><?= $this->__('Checkout') ?></h1>
</div>

<ol id="checkoutSteps"
    class="opc opc-firststep-<?= $this->getActiveStep() ?>"
    data-active-step="opc-<?= $this->getActiveStep() ?>"
