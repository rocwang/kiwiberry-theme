<div class="page-title">
  <h1><?php echo $this->__('Checkout') ?></h1>
</div>

<ol id="checkoutSteps"
    class="opc opc-firststep-<?php echo $this->getActiveStep() ?>"
    data-active-step="opc-<?php echo $this->getActiveStep() ?>"
    data-progress-url="<?php echo $this->getUrl('checkout/onepage/progress') ?>"
    data-review-url="<?php echo $this->getUrl('checkout/onepage/review') ?>"
    data-save-method-url="<?php echo $this->getUrl('checkout/onepage/saveMethod') ?>"
    data-failure-url="<?php echo $this->getUrl('checkout/cart') ?>"
