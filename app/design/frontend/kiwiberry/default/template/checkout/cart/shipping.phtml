        <label for="postcode"<?php if ($this->isZipCodeRequired()) echo ' class="required"' ?>>
          <?php if ($this->isZipCodeRequired()) echo '<em>*</em>' ?>
          <?php echo $this->__('Zip/Postal Code') ?>
