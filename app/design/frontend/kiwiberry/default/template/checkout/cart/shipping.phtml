  <?php if (($_shippingRateGroups = $this->getEstimateRates())): ?>
    <form id="co-shipping-method-form"
          action="<?php echo $this->getUrl('checkout/cart/estimateUpdatePost') ?>"
          class="form-horizontal"
          role="form">

      <?php foreach ($_shippingRateGroups as $code => $_rates): ?>

        <h5><?php echo $this->escapeHtml($this->getCarrierName($code)) ?></h5>

        <?php foreach ($_rates as $_rate): ?>
          <div class="form-group<?php if ($_rate->getErrorMessage()) echo ' error-msg'; ?>">

            <div class="col-sm-offset-2 col-sm-10">
              <?php if ($_rate->getErrorMessage()): ?>

                <?php echo $this->escapeHtml($_rate->getErrorMessage()) ?>

              <?php else: ?>

                <div class="radio">

                  <label for="s_method_<?php echo $_rate->getCode() ?>">
                    <input name="estimate_method"
                           type="radio"
                           value="<?php echo $this->escapeHtml($_rate->getCode()) ?>"
                           id="s_method_<?php echo $_rate->getCode() ?>"<?php if ($_rate->getCode() === $this->getAddressShippingMethod()) echo ' checked="checked"' ?>
                      >

                    <?php echo $this->escapeHtml($_rate->getMethodTitle()) ?>
                    -
                    <?php $_excl = $this->getShippingPrice($_rate->getPrice(), $this->helper('tax')->displayShippingPriceIncludingTax()); ?>
                    <?php echo $_excl; ?>

                    <?php $_incl = $this->getShippingPrice($_rate->getPrice(), true); ?>
                    <?php if ($this->helper('tax')->displayShippingBothPrices() && $_incl != $_excl): ?>
                      (<?php echo $this->__('Incl. Tax'); ?> <?php echo $_incl; ?>)
                    <?php endif; ?>
                  </label>
                </div>

              <?php endif ?>
            </div>
          </div>
        <?php endforeach; ?>

      <?php endforeach; ?>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
