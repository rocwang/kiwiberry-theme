<?php if (isset($poll)) : ?>
  <div class="panel panel-default">

    <div class="panel-heading">
      <?php echo $this->__('Community Poll') ?>
    </div>

    <div class="panel-body">

      <p><?php echo $this->escapeHtml($poll->getPollTitle()); ?></p>

      <?php if ($poll_answers): ?>
        <?php foreach ($poll_answers as $answer): ?>

          <div class="progress">
            <div class="progress-bar"
                 role="progressbar"
                 aria-valuenow="<?php echo $answer->getPercent() ?>"
                 aria-valuemin="0"
                 aria-valuemax="100"
                 style="width: <?php echo $answer->getPercent() ?>%;">
              <?php echo $this->escapeHtml($answer->getAnswerTitle()) ?> (<?php echo $answer->getVotesCount() ?>)
            </div>
          </div>

        <?php endforeach; ?>
      <?php endif; ?>

    </div>
  </div>
<?php endif; ?>
