<?php echo $this->getMessagesBlock()->toHtml() ?>

<div class="page-header">
  <h1><?php echo $this->__('My Product Reviews') ?></h1>
</div>

<?php if ($this->getCollection() && $this->count()): ?>

  <?php echo $this->getToolbarHtml() ?>

  <table class="table table-hover table-bordered" id="my-reviews-table">
    <thead>
    <tr>
      <th>Date</th>
      <th>Product</th>
      <th>Rating</th>
      <th>Comment</th>
      <th>&nbsp</th>
    </tr>
    </thead>

    <tbody>
    <?php foreach ($this->getCollection() as $_review): ?>

      <tr>
        <td><span class="nobr"><?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></span></td>
        <td>
          <a href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>">
            <?php echo $this->escapeHtml($_review->getName()) ?>
          </a>
        </td>
        <td>
          <?php if ($_review->getSum()): ?>
            <?php echo $this->getChild('rating')->setPercent($_review->getSum() / $_review->getCount())->toHtml() ?>
          <?php endif; ?>
        </td>
        <td><?php echo $this->helper('review')->getDetailHtml($_review->getDetail()) ?></td>
        <td>
          <a href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>" class="nobr">
            <?php echo $this->__('View Details') ?>
          </a>
        </td>
      </tr>

    <?php endforeach; ?>
    </tbody>
  </table>

  <?php echo $this->getToolbarHtml() ?>

<?php else: ?>

  <p class="text-info"><?php echo $this->__('You have submitted no reviews.') ?></p>

<?php endif; ?>

<a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>" class="btn btn-default">
  <i class="fa fa-angle-double-left"></i>
  <?php echo $this->__('Back') ?>
</a>
