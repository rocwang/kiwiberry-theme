<span class="stars">
  <?php
  $rating = $this->getPercent() / 20;
  for ($i = 0; $i < 5; $i++) {
    if ($i + 1 <= $rating) {
      echo Mage::helper('vr_kiwiberry')->getSvgIcon('star');
    } elseif ($i + 0.5 <= $rating) {
      echo Mage::helper('vr_kiwiberry')->getSvgIcon('star-half-o');
    } else {
      echo Mage::helper('vr_kiwiberry')->getSvgIcon('star-o');
    }
  }
  ?>
</span>
