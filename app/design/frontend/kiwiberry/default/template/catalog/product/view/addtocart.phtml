<?php $_product = $this->getProduct(); ?>
<?php if ($_product->isSaleable()): ?>

  <?php if (!$_product->isGrouped()): ?>
    <div class="form-group">
      <label for="qty" class="col-sm-2 control-label">
        <?= $this->__('Qty:') ?>
      </label>

      <div class="col-sm-10">
        <input type="text"
               pattern="\d*"
               name="qty"
               id="qty"
               maxlength="12"
               value="<?= max($this->getProductDefaultQty() * 1, 1) ?>"
               title="<?= $this->__('Qty') ?>"
               class="form-control">
      </div>
    </div>
  <?php endif; ?>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <?php $buttonTitle = $this->__('Add to Cart'); ?>
      <button type="button"
              title="<?= $buttonTitle ?>"
              class="btn btn-primary"
              id="add_to_cart">
        <?= $buttonTitle ?>
      </button>
    </div>
  </div>

  <?= $this->getChildHtml('', true, true) ?>

<?php endif; ?>
