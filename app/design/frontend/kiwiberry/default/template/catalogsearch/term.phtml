<h1><?= $this->__('Popular Search Terms') ?></h1>

<?php if (sizeof($this->getTerms()) > 0): ?>

  <ul class="list-unstyled">
    <?php foreach ($this->getTerms() as $_term): ?>
      <li>
        <a href="<?= $this->getSearchUrl($_term) ?>"
           style="font-size:<?= $_term->getRatio() * 70 + 75 ?>%;">
          <?= $this->escapeHtml($_term->getName()) ?>
        </a>
      </li>
    <?php endforeach; ?>
  </ul>

<?php else: ?>

  <p class="text-info"><?= $this->__('There are no search terms available.'); ?></p>

<?php endif; ?>
