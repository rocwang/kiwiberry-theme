<div class="page-header">
  <h1><?php echo $this->__('Catalog Advanced Search') ?></h1>
</div>

<?php echo $this->getMessagesBlock()->toHtml() ?>

<?php if ($this->getResultCount()): ?>

  <p class="text-info">
    <?php
    echo $this->helper('catalogsearch')
      ->__('<strong>%d item(s)</strong> were found using the following search criteria', $this->getResultCount());
    ?>
  </p>

<?php else: ?>

  <p class="text-danger">
    <?php echo $this->helper('catalogsearch')->__('No items were found using the following search criteria.'); ?>
    <a href="<?php echo $this->getFormUrl(); ?>" class="btn btn-default">
      <?php echo $this->helper('catalogsearch')->__('Modify your search'); ?>
    </a>
  </p>

<?php endif; ?>

<div class="row">
  <?php foreach (array('left', 'right') as $side): ?>
    <?php $searchCriterias = $this->getSearchCriterias(); ?>
    <?php if (isset($searchCriterias[$side])): ?>

      <div class="col-sm-6">
        <ul>
          <?php foreach ($searchCriterias[$side] as $criteria): ?>
            <li>
              <strong><?php echo $this->escapeHtml($this->helper('catalog')->__($criteria['name'])); ?>:
              </strong> <?php echo $this->escapeHtml($criteria['value']); ?>
            </li>
          <?php endforeach; ?>
        </ul>
      </div>

    <?php endif; ?>
  <?php endforeach; ?>
</div>

<?php if ($this->getResultCount()): ?>
  <p class="text-info">
    <?php echo $this->helper('catalogsearch')->__("Don't see what you're looking for?"); ?>
    <a href="<?php echo $this->getFormUrl(); ?>" class="btn btn-default">
      <?php echo $this->helper('catalogsearch')->__('Modify your search'); ?>
    </a>
  </p>
<?php endif; ?>

<?php if ($this->getResultCount()): ?>
  <?php echo $this->getProductListHtml() ?>
<?php endif; ?>
