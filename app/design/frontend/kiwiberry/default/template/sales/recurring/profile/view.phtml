<?php /* @var $this Mage_Sales_Block_Recurring_Profile_View */ ?>

<div class="order-page">

  <?php echo $this->getMessagesBlock()->toHtml() ?>

  <!-- title 'n' actions -->
  <div class="page-header">

    <h1><?php echo $this->__('Recurring Profile # %s', $this->escapeHtml($this->getReferenceId())) ?></h1>

    <?php if ($this->getCanCancel()): ?>
      <button type="button"
              title="<?php echo $this->__('Cancel') ?>"
              class="btn btn-danger"
              data-msg="<?php echo $this->getConfirmationMessage() ?>"
              data-url="<?php echo $this->getCancelUrl() ?>">
        <?php echo $this->__('Cancel') ?>
      </button>
    <?php endif; ?>

    <?php if ($this->getCanSuspend()): ?>
      <button type="button"
              title="<?php echo $this->__('Suspend') ?>"
              class="btn btn-warning"
              data-msg="<?php echo $this->getConfirmationMessage() ?>"
              data-url="<?php echo $this->getSuspendUrl() ?>">
        <?php echo $this->__('Suspend') ?>
      </button>
    <?php endif; ?>

    <?php if ($this->getCanActivate()): ?>
      <button type="button"
              title="<?php echo $this->__('Activate') ?>"
              class="btn btn-success"
              data-msg="<?php echo $this->getConfirmationMessage() ?>"
              data-url="<?php echo $this->getActivateUrl() ?>">
        <?php echo $this->__('Activate') ?>
      </button>
    <?php endif; ?>

    <?php if ($this->getCanUpdate()): ?>
      <button type="button"
              title="<?php echo $this->__('Get Update') ?>"
              class="btn btn-primary"
              data-msg="<?php echo $this->getConfirmationMessage() ?>"
              data-url="<?php echo $this->getUpdateUrl() ?>">
        <?php echo $this->__('Get Update') ?>
      </button>
    <?php endif; ?>
  </div>

  <!-- info tabs -->
  <p><?php echo $this->__('About This Profile:') ?></p>

  <?php $infoTabs = $this->getChildGroup('info_tabs'); ?>
  <ul id="order-info-tabs" class="nav nav-pills">
    <?php foreach ($infoTabs as $block): ?>
      <li role="presentation"
          <?php if ($this->getObjectData($block, 'is_view_current')): ?>class="active"<?php endif ?>
        >
        <a href="<?php echo $this->escapeHtml($this->getObjectData($block, 'view_url')) ?>">
          <?php echo $this->escapeHtml($this->getObjectData($block, 'view_label')) ?>
        </a>
      </li>
    <?php endforeach; ?>
  </ul>

  <!-- info blocks in 2 columns -->
  <?php for ($i = 1; $i <= 5; $i++): ?>
    <?php $infoBlocks = $this->getChildGroup("info_blocks_row_{$i}"); ?>
    <?php if ($infoBlocks): ?>
      <div class="row">
        <?php for ($j = 1; $j <= 2; $j++): ?>
          <?php foreach ($infoBlocks as $alias => $block): ?>
            <?php if ($j == $this->getObjectData($block, 'view_column')): ?>
              <div class="col-md-6">

                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h2 class="panel-title">
                      <?php echo $this->escapeHtml($this->getObjectData($block, 'view_label')) ?>
                    </h2>
                  </div>

                  <?php $html = $this->getChildHtml($alias) ?>
                  <?php if ($html) : ?>

                    <?php echo $html ?>

                  <?php else : ?>

                    <div class="panel-body">
                      <?php echo $this->__('No information available.'); ?>
                    </div>

                  <?php endif ?>

                </div>

              </div>
            <?php endif; ?>
          <?php endforeach; ?>
        <?php endfor; ?>
      </div>
    <?php endif; ?>
  <?php endfor; ?>

  <!-- table data block -->
  <?php $table = $this->getChild('table') ?>
  <?php if ($table): ?>
    <div>
      <h2><?php echo $this->escapeHtml($this->getObjectData($table, 'view_label')) ?></h2>
      <?php echo $this->getChildHtml('table') ?>
    </div>
  <?php endif; ?>

  <a href="<?php echo $this->getBackUrl() ?>" class="btn btn-default">
    <i class="fa fa-angle-double-left"></i>
    <?php echo $this->__('Back to Recurring Profiles') ?>
  </a>
</div>
