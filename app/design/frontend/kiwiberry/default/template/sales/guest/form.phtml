  <div class="form-group" id="oar-email">
    <label for="oar_email" class="required">
      <?= Mage::helper('sales')->__('Email Address') ?>

    </label>
    <input type="text"
           class="form-control validate-email required-entry"
           id="oar_email"
           name="oar_email"
           aria-describedby="oar_help_block">
  </div>

