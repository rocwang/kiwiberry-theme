    <label for="oar_zip" class="required">
      <?= Mage::helper('sales')->__('Billing ZIP Code') ?>

    </label>
    <input type="text"
           class="form-control required-entry"
           id="oar_zip"
           name="oar_zip"
           aria-describedby="oar_help_block">
  </div>

  <p class="text-danger"><?= Mage::helper('sales')->__('* Required Fields') ?></p>

  <button type="submit" title="<?= Mage::helper('sales')->__('Continue') ?>" class="btn btn-default">
